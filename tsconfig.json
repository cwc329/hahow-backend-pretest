{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "dist/",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2022",
    "sourceMap": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "paths": {
      "#apiRequests": ["apiRequests"],
      "#apiRequests/*": ["apiRequests/*"],
      "#controllers": ["controllers"],
      "#controllers/*": ["controllers/*/index.ts"],
      "#configs": ["configs"],
      "#configs/*": ["configs/*"],
      "#enums": ["enums"],
      "#enums/*": ["enums/*"],
      "#middlewares": ["middlewares"],
      "#middlewares/*": ["middlewares/*/index.ts"],
      "#routes": ["routes"],
      "#routes/*": ["routes/*"],
      "#utils": ["utils"],
      "#utils/*": ["utils/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "swc": true
  }
}
